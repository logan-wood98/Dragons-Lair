        <Button fx:id="addTitleButton" mnemonicParsing="false" onAction="#addTitle" text="Add Title" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="120.0" />
